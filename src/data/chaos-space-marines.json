        {
            "id": "infernal_reavers",
            "name": "Infernal Reavers",
            "flavor_text": "These cruel raiders excel in shipboard combat, seizing plunder and slaughtering entire crews as bloody offerings to their Dark Gods.",
            "army_rule": {
                "name": "The Forsaken",
                "description": "If a Dark Pacts Leadership test is failed, the unit is 'Forsaken' and loses the Dark Pacts ability for the rest of the battle.",
                "replaces": "Standard Dark Pacts"
            },
            "detachment_rule": {
                "name": "Dark Rewards",
                "description": "Each time a Heretic Astartes unit takes a Leadership test for Dark Pacts, on a roll of 9+, you gain 1CP."
            },
            "mustering_rules": [
                {
                    "type": "select_up_to_x",
                    "category_name": "Leaders",
                    "limit": 2,
                    "allowed_units": ["csm_abaddon", "csm_lord", "csm_lord_term", "csm_lord_jump", "csm_cypher", "csm_dark_apostle", "csm_fabius", "csm_haarken", "csm_huron", "csm_moe", "csm_mop", "csm_sorcerer", "csm_sorc_term", "csm_warpsmith"]
