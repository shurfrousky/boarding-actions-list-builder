                {
                    "type": "select_up_to_x",
                    "category_name": "Cultist Leaders",
                    "limit": 1,
                    "allowed_units": ["csm_cultist_firebrand", "csm_dark_commune", "csm_traitor_enforcer"]
                },
                {
                    "type": "select_up_to_x_each",
                    "category_name": "Battleline & Troops",
                    "limit_per_unit": 3,
                    "allowed_units": ["csm_legionaries", "csm_cultists", "csm_accursed", "csm_fellgor", "csm_traitor_guard"]
                },
                {
                    "type": "dependency_check",
                    "error_message": "Total count of Cultists/Traitor Guard/Beastmen cannot exceed total Legionaries units.",
                    "dependent_units": ["csm_cultists", "csm_accursed", "csm_fellgor", "csm_traitor_guard"],
                    "control_unit": "csm_legionaries",
                    "logic": "sum(dependent) <= count(control)"
                },
                {
                    "type": "select_up_to_x_each",
                    "category_name": "Elites",
                    "limit_per_unit": 1,
                    "allowed_units": ["csm_terminators", "csm_chosen"]
                },
                {
                    "type": "select_up_to_x",
                    "category_name": "Specialists / Beasts",
                    "limit": 1,
                    "allowed_units": ["csm_spawn", "csm_possessed", "csm_raptors", "csm_warp_talons"]
                }
            ],
            "rules_adaptations": [
                { "unit_id": "csm_accursed", "remove_ability": "Howling Horde" },
                { "unit_id": "csm_lord_jump", "remove_ability": "Deep Strike" },
